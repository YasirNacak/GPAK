<Window x:Class="GPAK.PackageEditor.LoadingWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GPAK.PackageEditor"
        mc:Ignorable="d" Height="100" Width="500" ResizeMode="NoResize" ShowInTaskbar="False" Title="Please Wait..." WindowStartupLocation="CenterScreen" Cursor="Wait">
    <Grid>
        <ProgressBar Name="LoadingProgressBar" HorizontalAlignment="Center" Height="20" VerticalAlignment="Bottom" Width="450" Margin="0,0,0,10"/>
        <Label Name="CurrentItemLabel" HorizontalAlignment="Center" Height="30" VerticalAlignment="Top" Width="450" Content="Loading Some Files"/>

    </Grid>
</Window>
